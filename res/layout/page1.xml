<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dip"
        android:layout_marginLeft="9dip"
        android:layout_marginRight="9dip"
        android:background="@drawable/box_main" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dip"
        android:text="1 / 3"
        android:textColor="#4382a0"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="29dip"
        android:layout_marginRight="29dip"
        android:layout_marginTop="12dip"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_main_cha1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="6dip"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_main_ribon1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_below="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dip"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="32dip"
        android:paddingRight="32dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="귀하의 스마트폰은 &apos;알 수 없는 소스&apos;에서 내려받은 앱을 설치할 수 있도록 설정되어 있습니다."
            android:textColor="#4382a0"
            android:textSize="11sp"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:text="이미 그렇게 해 두었거나, 이 앱을 설치하는 과정에서 귀하께서 직접 그렇게 했습니다."
            android:textColor="#005288"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:text="이렇게 해 두면 악성앱이 귀하의 스마트폰에 쉽게 설치될 수 있고, 스미싱 피해를 당하기 쉽습니다."
            android:textColor="#4382a0"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="* 이 화면을 옆으로 밀면 더 중요한 안내가 있어요."
            android:textColor="#bc3838"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>