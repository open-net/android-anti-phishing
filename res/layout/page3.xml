<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dip"
        android:layout_marginLeft="9dip"
        android:layout_marginRight="9dip"
        android:background="@drawable/box_main" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dip"
        android:text="3 / 3"
        android:textColor="#4382a0"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="29dip"
        android:layout_marginRight="29dip"
        android:layout_marginTop="12dip"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_main_cha3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="6dip"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_main_ribon3" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_below="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dip"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="32dip"
        android:paddingRight="32dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secure_1"
            android:textColor="#4382a0"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="#5bb3dd"
            android:paddingBottom="2dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="2dip"
            android:text="@string/secure_2"
            android:textColor="#ffffff"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button1"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_main" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:autoLink="web"
            android:text="@string/secure_3"
            android:textColor="#bc3838"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:text="@string/secure_4"
            android:textColor="#bc3838"
            android:textSize="9sp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>