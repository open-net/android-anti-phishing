<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dip"
        android:layout_marginLeft="9dip"
        android:layout_marginRight="9dip"
        android:background="@drawable/box_main" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dip"
        android:text="3 / 3"
        android:textColor="#4382a0"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="29dip"
        android:layout_marginRight="29dip"
        android:layout_marginTop="12dip"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_main_cha3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="6dip"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_main_ribon3" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_below="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dip"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="32dip"
        android:paddingRight="32dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 바로 설정을 변경해 주세요. &apos;알 수 없는 소스&apos;를 허용하지 않도록 하는 것이 귀하의 스마트폰 보호에 도움이 됩니다."
            android:textColor="#4382a0"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="#5bb3dd"
            android:paddingBottom="2dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="2dip"
            android:text="피싱방지앱? 그런 건 없어요. 속지마세요~"
            android:textColor="#ffffff"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button1"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dip"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_main" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:text="이 앱은 피싱앱의 위험을 경고하고, 금결원이 내세우는 금융앱스토어가 왜 소용이 없는지를 설명하기 위하여."
            android:textColor="#bc3838"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:text="* 이 앱은 사용자의 개인정보를 수집하지 않습니다."
            android:textColor="#bc3838"
            android:textSize="10sp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>